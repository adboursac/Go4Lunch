<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_large_margin"/>

    <ImageView
        android:id="@+id/nav_header_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/messenger_button_send_round_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_header_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@id/nav_header_avatar"
        app:layout_constraintTop_toTopOf="@id/nav_header_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Nom"/>

    <TextView
        android:id="@+id/nav_header_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nav_header_name"
        app:layout_constraintStart_toStartOf="@id/nav_header_name"
        app:layout_constraintEnd_toEndOf="@id/nav_header_name"
        android:text="Mail"/>

</androidx.constraintlayout.widget.ConstraintLayout>