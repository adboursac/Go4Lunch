<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Default Theme -->
    <style name="AppTheme.Default" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/orange_500</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="autoCompleteTextViewStyle">@style/AppTheme.AutoComplete</item>
    </style>

    <!-- Drawer Theme -->
    <style name="AppTheme.Drawer" parent="AppTheme">
        <item name="android:backgroundTint">@color/orange_400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Search View -->
    <style name="AppTheme.AutoComplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@color/orange_transparent</item>
    </style>

</resources>